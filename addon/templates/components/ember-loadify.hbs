{{yield (hash
  records=records
  isEmpty=isEmpty
  isLastPage=isLastPage
  canLoadMore=canLoadMore
  isLoading=isLoading
  isResetting=isResetting
  nextPage=(action "nextPage")
  reset=(perform resetRecords))}}
{{#if showPagination}}
  {{#if isPaginationViewable}}
    {{ember-loadify/pagination infinite=infinite paginate=paginate text=nextPageText currentPage=page totalPages=totalPages onNextPage=(action "nextPage") onGoToPage=(action "goToPage")}}
  {{/if}}
{{/if}}
